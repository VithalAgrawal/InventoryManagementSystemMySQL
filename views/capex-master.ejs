<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head', { title: 'Inventory Master' }) %>
        <link rel="stylesheet" href="/styles/forms.css">
</head>

<body>
    <%- include('includes/header') %>
        <main>
            <h1>Add a new item to DataBase</h1>
            <form action="/capexmaster" method="POST">
                <div class="form-row">
                    <div class="form-control">
                        <label for="itemnum">Item No.</label>
                        <input type="text" value="IT<%= (+(item.item_no) + 1) %>" id="itemnum" name="itemnum" readonly>
                    </div>
                    <div class="form-control">
                        <label for="code">Item Code</label>
                        <input type="number" id="code" name="code" required>
                    </div>
                    <div class="form-control">
                        <label for="name">Item Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-control">
                        <label for="make">Make</label>
                        <input type="text" id="make" name="make">
                    </div>
                    <div class="form-control">
                        <label for="model">Model</label>
                        <input type="text" id="model" name="model">
                    </div>
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <input type="text" class="description" id="description" name="description" maxlength="255">
                </div>
                <div class="form-row">
                    <div class="form-control">
                        <label for="um">Unit of Measurement</label>
                        <input type="text" id="um" name="um" required>
                    </div>
                    <div class="form-control">
                        <label for="createddate">Created Date</label>
                        <input type="date" id="createddate" name="createddate" required>
                    </div>
                </div>
                    <div class="form-row">
                        <button class="btn">Add Item</button>
                    </div>
                    <div class="form-control">
                        <!-- <label for="itemno">Item No.</label> -->
                        <input type="hidden" value="<%= (+(item.item_no) + 1) %>" id="itemno" name="itemno" readonly>
                    </div>
            </form>
        </main>
</body>

</html>